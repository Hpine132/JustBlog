@{
    ViewData["Title"] = "GetPostsByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FA.JustBlog.Core.Models;
@model List<Post>;
@{
    var categoryName = ViewBag.CategoryName;
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-8">
            <h1 class="post-title">Tin tức @categoryName</h1>
            <div class="col-md-10 col-lg-8 col-xl-7">
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <div class="post-preview">
                            <a asp-action="Detail" asp-controller="Post" asp-route-year="@item.PostedOn.Year" asp-route-month="@item.PostedOn.Month" asp-route-title="@item.Title">
                                <h2 class="post-title">@item.Title</h2>
                                <h3 class="post-subtitle">@item.ShortDescription</h3>
                            </a>
                            <p class="post-meta">
                                Posted by
                                <a href="#!">Start Bootstrap</a>
                                @item.PostedOn
                            </p>
                        </div>
                        <!-- Divider-->
                        <hr class="my-4" />
                    }
                }
            </div>
        </div>
        <div class="col-4">
            <div class="row">
                <partial name="_ListPosts" />
            </div>
        </div>
    </div>
</div>

